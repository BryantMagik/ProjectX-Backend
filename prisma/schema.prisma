generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  first_name   String
  last_name    String
  password     String
  role         Role_User @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  UserProjects Project[] @relation("AuthorProject")
  UserTaks     Taks[]    @relation("AuthorTask")
}

enum Role_User {
  USER
  ADMIN
}

model Project {
  id          String         @id @default(cuid())
  code        String         @unique
  name        String
  description String
  type        Project_Type
  status      Project_Status
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  userId      String
  user        User           @relation("AuthorProject", fields: [userId], references: [id])
  taks        Taks[]         @relation("id")
}

enum Project_Type {
  SOFTWARE
}

enum Project_Status {
  ONGOING
  ONWAIT
  COMPLETED
}

model Taks {
  id          String        @id @default(cuid())
  code        String        @unique
  sumary      String
  description String
  priority    Task_priority
  task_type   Task_type
  status      Task_status
  project_id  String
  project     Project       @relation("id", fields: [project_id], references: [id])
  user_id     String
  user        User          @relation("AuthorTask", fields: [user_id], references: [id])
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum Task_priority {
  HIGH
  MEDIUM
  LOW
}

enum Task_type {
  BUG
  FEATURE_REQUEST
}

enum Task_status {
  PENDING
  ONGOING
  COMPLETED
}

model subtask {
  id String @id @default(cuid())
}
