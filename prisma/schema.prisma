generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Workspace {
  id          String       @id @default(cuid())
  name        String
  description String?
  image       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  creatorId   String?      @default(cuid())
  invitations Invitation[]       @relation("WorkspaceInvitations")
  projects    Project[]          @relation("WorkspaceProjects")
  creator     User?              @relation("WorkspaceCreator", fields: [creatorId], references: [id])
  members     WorkspaceMember[]
}

model User {
  id                  String       @id @default(cuid())
  email               String       @unique
  first_name          String
  profile_picture     String?
  last_name           String
  password            String
  type_user           UserType     @default(TRAINEE)
  role                Role_User    @default(USER)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  refreshToken        String?
  comments            Comment[]
  createdInvitations  Invitation[] @relation("InvitationAuthor")
  issues              Issue[]      @relation("reporterissue")
  authoredProjects    Project[]    @relation("ProjectAuthors")
  leadProjects        Project[]    @relation("ProjectLead")
  createdTasks        Task[]       @relation("CreatedTasks")
  workspacesAsCreator Workspace[]  @relation("WorkspaceCreator")
  subtasks            subtask[]    @relation("Subtasksauthor")
  assignedTasks       Task[]       @relation("AssignedTasks")
  assignedtoIssues    Issue[]           @relation("Assignedto")
  workspaceMemberships WorkspaceMember[]
  projectMemberships   ProjectMember[]
}

model Project {
  id           String             @id @default(cuid())
  code         String             @unique
  name         String
  description  String?
  type         Project_Type
  status       Project_Status?    @default(ONGOING)
  visibility   Project_Visibility @default(PRIVATE)
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  authorId     String
  leadId       String?
  image        String?
  workspaceId  String
  issues       Issue[]
  author       User               @relation("ProjectAuthors", fields: [authorId], references: [id])
  lead         User?              @relation("ProjectLead", fields: [leadId], references: [id])
  workspace    Workspace          @relation("WorkspaceProjects", fields: [workspaceId], references: [id])
  tasks        Task[]             @relation("ProjectTasks")
  members      ProjectMember[]
}

model Task {
  id          String        @id @default(cuid())
  summary     String
  description String
  priority    Task_priority
  task_type   Task_type
  status      Task_status
  projectId   String
  creatorId   String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  name        String        @unique
  dueTime     Int?
  comments    Comment[]     @relation("TaskComments")
  creator     User          @relation("CreatedTasks", fields: [creatorId], references: [id])
  project     Project       @relation("ProjectTasks", fields: [projectId], references: [id])
  subtasks    subtask[]     @relation("TaskSubtask")
  users       User[]        @relation("AssignedTasks")
}

model subtask {
  id            String      @id @default(cuid())
  name          String      @db.VarChar(255)
  description   String?
  status        Task_status
  taskId        String
  creation_date DateTime    @default(now())
  update_date   DateTime    @updatedAt
  authorId      String
  author        User        @relation("Subtasksauthor", fields: [authorId], references: [id])
  task          Task        @relation("TaskSubtask", fields: [taskId], references: [id])
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  date      DateTime @default(now())
  updatedAt DateTime @updatedAt
  taskId    String?
  issueId   String?
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  issue     Issue?   @relation("IssueComments", fields: [issueId], references: [id])
  task      Task?    @relation("TaskComments", fields: [taskId], references: [id])
}

model Issue {
  id          String        @id @default(cuid())
  code        String        @unique @map("code")
  type        IssueType
  summary     String        @map("summary")
  description String?       @map("description")
  priority    Task_priority
  projectId   String
  reporterId  String
  status      IssueStatus
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  comments    Comment[]     @relation("IssueComments")
  project     Project       @relation(fields: [projectId], references: [id])
  reporter    User          @relation("reporterissue", fields: [reporterId], references: [id])
  assignedTo  User[]        @relation("Assignedto")
}

model Invitation {
  id          String    @id @default(cuid())
  code        String    @unique
  token       String    @unique @default(cuid())
  isActive    Boolean   @default(true)
  maxUses     Int?
  uses        Int       @default(0)
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
  workspaceId String
  authorId    String
  author      User      @relation("InvitationAuthor", fields: [authorId], references: [id])
  workspace   Workspace @relation("WorkspaceInvitations", fields: [workspaceId], references: [id])
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  userId      String
  workspaceId String
  role        WorkspaceRole @default(MEMBER)
  joinedAt    DateTime      @default(now())
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

model ProjectMember {
  id        String      @id @default(cuid())
  userId    String
  projectId String
  role      ProjectRole @default(MEMBER)
  joinedAt  DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

enum UserType {
  TRAINEE
  DEVELOPER
  MANAGER
  DESIGNER
  QA
  PRODUCT_OWNER
}

enum Role_User {
  USER
  ADMIN
}

enum Project_Type {
  SOFTWARE
  EXTERNAL
  RESEARCH
  INTERNAL
}

enum Project_Status {
  ONGOING
  ONWAIT
  COMPLETED
}

enum Project_Visibility {
  PUBLIC
  PRIVATE
}

enum Task_priority {
  HIGH
  MEDIUM
  LOW
}

enum Task_type {
  BUG
  FEATURE_REQUEST
  BACKLOG
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

enum Task_status {
  PENDING
  ONGOING
  COMPLETED
}

enum IssueType {
  BUG
  FEATURE_REQUEST
}

enum IssueStatus {
  PENDING
  ONGOING
  COMPLETED
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectRole {
  LEAD
  MEMBER
  VIEWER
}
